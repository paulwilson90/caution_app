<ClearButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: utils.get_color_from_hex("#000000")
    border_radius: 5
    color: self.back_color
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex("#FFF300")
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1

